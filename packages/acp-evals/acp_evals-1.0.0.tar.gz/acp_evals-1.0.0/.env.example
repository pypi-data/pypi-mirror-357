# ACP Evals Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
# Optional: Custom OpenAI base URL (for Azure or other compatible endpoints)
# OPENAI_BASE_URL=https://your-custom-endpoint.openai.azure.com/
# Optional: OpenAI model override
# OPENAI_MODEL=gpt-4.1

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
# Optional: Anthropic model override
# ANTHROPIC_MODEL=claude-4-sonnet

# Ollama Configuration (optional, for local models)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=Qwe3:30b-a3b

# Default Provider Selection
# Options: openai, anthropic, azure, ollama
# If not set, will auto-detect based on available API keys
# DEFAULT_PROVIDER=openai

# Evaluation Settings
# Default pass threshold for evaluations (0.0 to 1.0)
# EVALUATION_PASS_THRESHOLD=0.6

# Default timeout for agent requests (in seconds)
# AGENT_REQUEST_TIMEOUT=30

# Enable debug logging
# DEBUG=false

# Telemetry Settings (optional)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_SERVICE_NAME=acp-evals

# Production Trace Storage (optional)
# TRACE_STORAGE_PATH=./traces
# TRACE_RETENTION_DAYS=30

# Cost Tracking (optional)
# ENABLE_COST_TRACKING=true
# COST_ALERT_THRESHOLD=10.00

# Mock Mode Settings (for testing without API calls)
# ENABLE_MOCK_MODE=false
# MOCK_RESPONSE_DELAY=0.5