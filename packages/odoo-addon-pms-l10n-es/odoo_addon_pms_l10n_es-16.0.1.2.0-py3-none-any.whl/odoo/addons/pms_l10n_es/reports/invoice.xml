<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath
            expr="//div[@id='partner_vat_address_not_same_as_shipping']"
            position="after"
        >
            <div
                t-if="not o.partner_id.vat and o.partner_id.aeat_identification_type"
                class="mt16"
            >
                <t><span t-field="o.partner_id.aeat_identification_type" /></t>: <span
                    t-field="o.partner_id.aeat_identification"
                />
            </div>
        </xpath>

        <xpath
            expr="//div[@id='partner_vat_address_same_as_shipping']"
            position="after"
        >
            <div
                t-if="not o.partner_id.vat and o.partner_id.aeat_identification_type"
                class="mt16"
            >
                <t><span t-field="o.partner_id.aeat_identification_type" /></t>: <span
                    t-field="o.partner_id.aeat_identification"
                />
            </div>
        </xpath>

        <xpath expr="//div[@id='partner_vat_no_shipping']" position="after">
            <div
                t-if="not o.partner_id.vat and o.partner_id.aeat_identification_type"
                class="mt16"
            >
                <t><span t-field="o.partner_id.aeat_identification_type" /></t>: <span
                    t-field="o.partner_id.aeat_identification"
                />
            </div>
        </xpath>
    </template>

    <template id="pms_report_invoice_document" inherit_id="pms.report_invoice_document">
        <xpath expr="//div[@name='pms_property_address_block']" position="inside">
            <t t-if="o.pms_property_id.spanish_tourism_classification_id">
                <div name="pms_property_tourism_classification">
                    <strong>Tourism Classification:</strong>
                    <span
                        t-field="o.pms_property_id.spanish_tourism_classification_id"
                    />
                </div>
            </t>
        </xpath>
    </template>

</odoo>
