{
  "name": "blog_post",
  "description": "Aesthetic Instagram post template with centered CTA, extended background, and subtle gradients",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 },
      "fill_color": null,
      "gradient_config": {
        "type": "linear",
        "colors": ["#FEE9E1", "#F5C7D0"],
        "direction": 45
      },
      "outline_color": null
    },
    {
      "type": "rectangle",
      "position": { "x": 60, "y": 150 },
      "size": { "width": 960, "height": 880 },
      "fill_color": null,
      "gradient_config": {
        "type": "linear",
        "colors": ["#FFFFFF", "#F8F8F8"],
        "direction": 90
      },
      "outline_color": null,
      "border_radius": 40,
      "shadow": {
        "offset_x": 0,
        "offset_y": 10,
        "blur": 20,
        "color": [0, 0, 0, 0.1]
      }
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 60, "y": 150 },
      "size": { "width": 960, "height": 480 },
      "border_width": 0,
      "border_radius": 40
    },
    {
      "type": "text",
      "text": "${title}",
      "position": { "x": 100, "y": 680 },
      "font_size": 48,
      "color": [40, 40, 40, 1],
      "font_path": "Outfit-Bold",
      "alignment": "left",
      "max_width": 880,
      "line_height": 1.3
    },
    {
      "type": "text",
      "text": "by ${author} â€¢ ${read_time} min",
      "position": { "x": 100, "y": 820 },
      "font_size": 32,
      "color": [100, 100, 100, 1],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 880
    },
    {
      "type": "rectangle",
      "position": { "x": 100, "y": 900 },
      "size": { "width": 260, "height": 80 },
      "fill_color": "${theme_color}",
      "border_radius": 20
    },
    {
      "type": "text",
      "text": "Read now",
      "position": { "x": 100, "y": 920 },
      "size": { "width": 260, "height": 80 },
      "font_size": 34,
      "color": [255, 255, 255, 1],
      "font_path": "Outfit-Medium",
      "alignment": "center",
      "max_width": 260,
      "line_height": 1.5
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 60, "y": 60 },
      "size": { "width": 80, "height": 80 },
      "circle_crop": true,
      "border_width": 4,
      "border_color": "#FFFFFF"
    },
    {
      "type": "rectangle",
      "position": { "x": 100, "y": 650 },
      "size": { "width": 80, "height": 4 },
      "fill_color": [255, 100, 100, 1],
      "border_radius": 2
    }
  ]
}
