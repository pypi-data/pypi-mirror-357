{
  "name": "education_info",
  "description": "Refined educational template with vibrant full-bleed image, elegant text overlay, and modern design touches",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "opacity": 1.0,
      "tint_color": "#1A1A1A",
      "tint_opacity": 0.45,
      "filters": {
        "brightness": 0.95,
        "contrast": 1.05
      }
    },
    {
      "type": "rectangle",
      "position": { "x": 280, "y": 480 },
      "size": { "width": 2000, "height": 1600 },
      "fill_color": [255, 255, 255, 0.92],
      "border_radius": 60,
      "shadow": {
        "color": [0, 0, 0, 0.15],
        "offset_x": 0,
        "offset_y": 25,
        "blur_radius": 60
      },
      "border_width": 1,
      "border_color": [230, 230, 235, 0.5]
    },
    {
      "type": "rectangle",
      "position": { "x": 460, "y": 600 },
      "size": { "width": 120, "height": 10 },
      "fill_color": [70, 90, 255, 1],
      "border_radius": 2.5,
      "gradient": {
        "type": "linear",
        "colors": [
          [70, 90, 255, 1],
          [120, 140, 255, 1]
        ],
        "angle": 45
      }
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": { "x": 460, "y": 620 },
      "font_size": 48,
      "color": [70, 90, 255, 1],
      "font_path": "Roboto-Bold",
      "alignment": "left",
      "max_width": 1800,
      "letter_spacing": 3,
      "text_transform": "uppercase"
    },
    {
      "type": "text",
      "text": "${product_info}",
      "position": { "x": 460, "y": 740 },
      "font_size": 80,
      "color": [20, 20, 30, 1],
      "font_path": "Roboto-Regular",
      "alignment": "left",
      "max_width": 1800,
      "line_height": 2.5,
      "shadow": {
        "color": [0, 0, 0, 0.05],
        "offset_x": 0,
        "offset_y": 2,
        "blur_radius": 4
      }
    },
    {
      "type": "rectangle",
      "position": { "x": 460, "y": 1820 },
      "size": { "width": 300, "height": 4 },
      "fill_color": [235, 235, 240, 1],
      "border_radius": 4,
      "opacity": 0.8
    },
    {
      "type": "text",
      "text": "${author}",
      "position": { "x": 460, "y": 1850 },
      "font_size": 52,
      "color": [30, 30, 40, 1],
      "font_path": "Roboto-SemiBold",
      "alignment": "left",
      "max_width": 1200,
      "letter_spacing": 0.8
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 460, "y": 1920 },
      "font_size": 44,
      "color": [100, 100, 120, 1],
      "font_path": "Roboto-Regular",
      "alignment": "left",
      "max_width": 1200,
      "letter_spacing": 0.4,
      "underline": {
        "color": [100, 100, 120, 0.5],
        "thickness": 1
      }
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 1840, "y": 1820 },
      "size": { "width": 200, "height": 200 },
      "border_radius": 100,
      "border_width": 5,
      "border_color": [255, 255, 255, 1],
      "shadow": {
        "color": [0, 0, 0, 0.1],
        "offset_x": 0,
        "offset_y": 10,
        "blur_radius": 20
      },
      "opacity": 0.95
    }
  ]
}
