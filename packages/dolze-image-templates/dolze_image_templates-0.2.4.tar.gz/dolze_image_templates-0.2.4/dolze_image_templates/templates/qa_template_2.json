{
  "name": "qa_template_2",
  "description": "Elegant Q&A template with glassmorphism card and geometric background",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": "${theme_color}",
      "border_radius": 0
    },

    {
      "type": "rectangle",
      "position": { "x": 200, "y": 200 },
      "size": { "width": 2160, "height": 2000 },
      "fill_color": [255, 255, 255, 0.85],
      "border_radius": 50,
      "rotation_angle": 2,
      "blur_radius": 20,
      "shadow": {
        "color": [0, 0, 0, 0.1],
        "offset_x": 8,
        "offset_y": 8,
        "blur_radius": 20
      }
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 1080, "y": 250 },
      "size": { "width": 400, "height": 400 },
      "circle_crop": true
    },
    {
      "type": "rectangle",
      "position": { "x": 300, "y": 900 },
      "size": { "width": 1960, "height": 300 },
      "fill_color": [68, 236, 157, 0.1],
      "border_radius": 30,
      "highlight_color": true
    },
    {
      "type": "text",
      "text": "${question}",
      "position": { "x": 350, "y": 950 },
      "font_family": "Outfit-Medium",
      "font_size": 200,
      "color": [17, 24, 39, 1],
      "max_width": 1860,
      "line_spacing": 1.3,
      "align": "center",
      "font_weight": "bold"
    },
    {
      "type": "rectangle",
      "position": { "x": 800, "y": 1350 },
      "size": { "width": 960, "height": 4 },
      "fill_color": [68, 236, 157, 1],
      "divider_style": "solid"
    },
    {
      "type": "text",
      "text": "${answer}",
      "position": { "x": 350, "y": 1450 },
      "font_family": "Outfit-Medium",
      "font_size": 100,
      "color": [75, 85, 99, 1],
      "max_width": 1860,
      "align": "center"
    },
    {
      "type": "text",
      "text": "${username}",
      "position": { "x": 350, "y": 2250 },
      "font_family": "Outfit-Medium",
      "font_size": 60,
      "color": [17, 24, 39, 1],
      "max_width": 900,
      "line_spacing": 1.2,
      "align": "left",
      "font_style": "italic"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 1350, "y": 2250 },
      "font_family": "Outfit-Medium",
      "font_size": 60,
      "color": [17, 24, 39, 1],
      "max_width": 900,
      "line_spacing": 1.2,
      "align": "right",
      "font_style": "italic"
    }
  ]
}
