{
  "name": "product_showcase_3",
  "description": "Premium product showcase with large tilted image, curved gradient background, and glossy overlay",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": [240, 242, 245, 1],
      "border_radius": 0
    },
    {
      "type": "path",
      "position": { "x": 0, "y": 0 },
      "path_data": "M0,0 L2560,0 C2560,1280 1280,2560 0,2560 Z",
      "fill_color": "linear-gradient(120deg, [59,130,246,1] 0%, [147,51,234,1] 100%)",
      "outline_color": null
    },
    {
      "type": "rectangle",
      "position": { "x": 330, "y": 150 },
      "size": { "width": 1900, "height": 1300 },
      "fill_color": [255, 255, 255, 1],
      "border_radius": 50,
      "rotation_angle": 3,
      "shadow": {
        "color": [0, 0, 0, 0.2],
        "offset_x": 10,
        "offset_y": 10,
        "blur_radius": 25
      }
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": { "x": 360, "y": 180 },
      "size": { "width": 1840, "height": 1240 },
      "border_radius": 40,
      "rotation_angle": 3,
      "overlay_color": [255, 255, 255, 0.1]
    },
    {
      "type": "rectangle",
      "position": { "x": 1900, "y": 150 },
      "size": { "width": 280, "height": 100 },
      "fill_color": [234, 179, 8, 1],
      "border_radius": 20,
      "rotation_angle": -10,
      "shadow": {
        "color": [0, 0, 0, 0.1],
        "offset_x": 4,
        "offset_y": 4,
        "blur_radius": 10
      },
      "shape": "angled"
    },
    {
      "type": "text",
      "text": "${badge_text}",
      "position": { "x": 1930, "y": 170 },
      "font_path": "Outfit-Medium",
      "font_size": 48,
      "color": [255, 255, 255, 1],
      "max_width": 400,
      "line_spacing": 1.2,
      "align": "center",
      "font_weight": "bold"
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": { "x": 330, "y": 1600 },
      "font_path": "Outfit-Medium",
      "font_size": 120,
      "font_weight": "bold",
      "color": [17, 24, 39, 1],
      "max_width": 1900,
      "line_spacing": 1.3,
      "align": "left"
    },
    {
      "type": "text",
      "text": "${product_price}",
      "position": { "x": 330, "y": 1900 },
      "font_path": "Outfit-Medium",
      "font_size": 90,
      "color": [239, 68, 68, 1],
      "max_width": 500,
      "line_spacing": 1.2,
      "align": "left",
      "font_weight": "bold"
    },
    {
      "type": "text",
      "text": "${product_description}",
      "position": { "x": 330, "y": 2050 },
      "font_path": "Outfit-Medium",
      "font_size": 60,
      "color": [75, 85, 99, 1],
      "max_width": 1600,
      "line_spacing": 1.6,
      "align": "left"
    },
    {
      "type": "rectangle",
      "position": { "x": 330, "y": 2250 },
      "size": { "width": 450, "height": 120 },
      "gradient_fill": "linear-gradient(90deg, [59,130,246,1] 0%, [147,51,234,1] 100%)",
      "border_radius": 25,
      "shadow": {
        "color": [0, 0, 0, 0.15],
        "offset_x": 6,
        "offset_y": 6,
        "blur_radius": 15
      },
      "button_url": "${button_url}"
    },
    {
      "type": "text",
      "text": "${button_text}",
      "position": { "x": 380, "y": 2270 },
      "font_path": "Outfit-Medium",
      "font_size": 50,
      "color": [255, 255, 255, 1],
      "max_width": 350,
      "line_spacing": 1.2,
      "align": "center",
      "font_weight": "bold"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 180, "y": 2300 },
      "size": { "width": 200, "height": 200 },
      "opacity": 0.8,
      "circle_crop": true
    }
  ]
}
