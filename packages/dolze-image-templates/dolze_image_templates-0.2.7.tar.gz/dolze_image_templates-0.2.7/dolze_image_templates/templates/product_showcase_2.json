{
  "name": "product_showcase_2",
  "description": "Modern product showcase with tilted image frame, badge, and CTA button",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": [245, 245, 245, 1],
      "border_radius": 0
    },
    {
      "type": "polygon",
      "position": { "x": 0, "y": 0 },
      "points": [
        [0, 0],
        [2560, 0],
        [0, 2560]
      ],
      "fill_color": "${theme_color}",
      "outline_color": null
    },
    {
      "type": "rectangle",
      "position": { "x": 460, "y": 200 },
      "size": { "width": 1640, "height": 1400 },
      "fill_color": [255, 255, 255, 1],
      "border_radius": 40,
      "rotation_angle": 5,
      "shadow": {
        "color": [0, 0, 0, 0.15],
        "offset_x": 8,
        "offset_y": 8,
        "blur_radius": 20
      }
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": { "x": 500, "y": 240 },
      "size": { "width": 1560, "height": 1320 },
      "border_radius": 30,
      "rotation_angle": 5
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": { "x": 460, "y": 1750 },
      "font_family": "Outfit-Medium",
      "font_size": 100,
      "font_weight": "bold",
      "color": [17, 24, 39, 1],
      "max_width": 1600,
      "line_spacing": 1.3,
      "align": "left"
    },
    {
      "type": "text",
      "text": "${product_price}",
      "position": { "x": 460, "y": 1930 },
      "font_family": "Outfit-Medium",
      "font_size": 80,
      "color": [239, 68, 68, 1],
      "max_width": 400,
      "line_spacing": 1.2,
      "align": "left",
      "font_weight": "bold"
    },
    {
      "type": "text",
      "text": "${product_description}",
      "position": { "x": 460, "y": 2050 },
      "font_family": "Outfit-Medium",
      "font_size": 50,
      "color": [75, 85, 99, 1],
      "max_width": 1400,
      "line_spacing": 1.5,
      "align": "left"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 2000, "y": 2300 },
      "size": { "width": 200, "height": 200 },
      "opacity": 0.7,
      "circle_crop": true
    }
  ]
}
