<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_expense_view_form" model="ir.ui.view">
        <field name="name">hr.expense.view.form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense_analytic_tag.hr_expense_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_tag_ids']" position="before">
                <field name="fund_all" invisible="1" />
                <field name="fund_id" readonly="not is_editable" />
            </xpath>
            <xpath expr="//field['analytic_tag_ids']" position="before">
                <field name="domain_tag_ids" invisible="1" />
                <field name="analytic_tag_all" invisible="1" />
            </xpath>
        </field>
    </record>
    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form</field>
        <field name="model">hr.expense.sheet</field>
        <field
            name="inherit_id"
            ref="hr_expense_analytic_tag.view_hr_expense_sheet_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='expense_line_ids']/list/field[@name='analytic_tag_ids']"
                position="before"
            >
                <field name="fund_all" column_invisible="1" />
                <field name="fund_id" optional="show" />
                <field name="domain_tag_ids" column_invisible="1" />
                <field name="analytic_tag_all" column_invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/list/field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>
</odoo>
