# Kubiya Workflow SDK Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# Kubiya API Key - Get from https://app.kubiya.ai
KUBIYA_API_KEY=your-kubiya-api-key-here

# ============================================
# AI PROVIDER CONFIGURATION (ADK)
# ============================================

# Together AI API Key - For AI workflow generation (https://together.ai)
# Required if using ADK provider
TOGETHER_API_KEY=your-together-api-key-here

# Google AI API Key - Alternative to Together AI
# Optional - only if using Google models
GOOGLE_API_KEY=your-google-api-key-here

# Vertex AI Configuration - For enterprise users
# Optional - only if using Vertex AI
VERTEX_PROJECT_ID=your-gcp-project-id
VERTEX_LOCATION=us-central1

# ============================================
# KUBIYA PLATFORM CONFIGURATION
# ============================================

# Override default Kubiya API URL (optional)
# KUBIYA_API_URL=https://api.kubiya.ai/api/v1

# Specify organization name (optional)
# KUBIYA_ORG_NAME=your-organization

# Default runner for workflow execution
# KUBIYA_DEFAULT_RUNNER=auto

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Enable hot reload (development only)
RELOAD=false

# CORS configuration
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================

# PostgreSQL for workflow history
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=kubiya_workflows
POSTGRES_USER=kubiya
POSTGRES_PASSWORD=secure_password_here

# Redis for caching
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# MONITORING CONFIGURATION (Optional)
# ============================================

# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=8001

# Grafana admin password
GRAFANA_PASSWORD=admin

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT secret for API authentication
JWT_SECRET=your-secret-key-here

# SSL/TLS configuration
SSL_CERT_FILE=/path/to/cert.pem
SSL_KEY_FILE=/path/to/key.pem

# ============================================
# ADK PROVIDER CONFIGURATION
# ============================================

# Model selection
ADK_MODEL_PROVIDER=together  # Options: together, google, vertex
ADK_ORCHESTRATOR_MODEL=deepseek-ai/DeepSeek-V3
ADK_GENERATOR_MODEL=deepseek-ai/DeepSeek-V3
ADK_REFINEMENT_MODEL=deepseek-ai/DeepSeek-V3

# Execution settings
ADK_EXECUTE_WORKFLOWS=true
ADK_MAX_LOOP_ITERATIONS=3
ADK_TIMEOUT=300

# Streaming format
ADK_STREAM_FORMAT=sse  # Options: sse, vercel, raw

# ============================================
# FEATURE FLAGS
# ============================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable workflow caching
ENABLE_WORKFLOW_CACHE=true
WORKFLOW_CACHE_TTL=3600

# Enable audit logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=/var/log/kubiya/audit.log

# ============================================
# INTEGRATION SETTINGS
# ============================================

# Slack integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_DEFAULT_CHANNEL=#workflows

# PagerDuty integration
PAGERDUTY_API_KEY=your-pagerduty-key
PAGERDUTY_SERVICE_ID=your-service-id

# GitHub integration
GITHUB_TOKEN=your-github-token
GITHUB_ORG=your-organization

# AWS integration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Debug mode
DEBUG=false

# Test mode
TEST_MODE=false

# Mock external services
MOCK_KUBIYA_API=false
MOCK_AI_PROVIDERS=false 