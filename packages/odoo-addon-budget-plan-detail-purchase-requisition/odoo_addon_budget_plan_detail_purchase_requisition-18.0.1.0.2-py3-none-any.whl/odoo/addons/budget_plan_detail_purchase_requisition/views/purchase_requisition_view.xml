<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_purchase_requisition_form" model="ir.ui.view">
        <field name="name">purchase.requisition.form</field>
        <field name="model">purchase.requisition</field>
        <field
            name="inherit_id"
            ref="purchase_requisition.view_purchase_requisition_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='line_ids']/list//field[@name='analytic_distribution']"
                position="after"
            >
                <field name="fund_all" column_invisible="1" />
                <field name="domain_tag_ids" column_invisible="1" />
                <field name="analytic_tag_all" column_invisible="1" />
                <field name="fund_id" optional="show" />
                <field
                    name="analytic_tag_ids"
                    widget="many2many_tags"
                    optional="show"
                    domain="[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]"
                />
            </xpath>
            <xpath
                expr="//field[@name='line_ids']/form//field[@name='analytic_distribution']"
                position="after"
            >
                <field name="fund_all" invisible="1" />
                <field name="fund_id" />
            </xpath>
        </field>
    </record>
</odoo>
