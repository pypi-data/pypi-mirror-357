exclude test/*
exclude tests/*
exclude ipfs_kit_py/tests/*
exclude ipfs_kit_py/cache/*
exclude ipfs_kit_py/__pycache__/*
recursive-exclude test *
recursive-exclude tests *
recursive-exclude ipfs_kit_py/tests *
recursive-exclude ipfs_kit_py/cache *
recursive-exclude ipfs_kit_py/__pycache__ *
