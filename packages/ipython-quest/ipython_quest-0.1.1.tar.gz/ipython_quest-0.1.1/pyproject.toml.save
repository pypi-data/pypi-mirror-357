[project]
name = "ipython-quest"
version = "0.1.1"
description = "A Pythonny Quest - REPL hints and interactive games to help you get better at programming in Python"
readme = "README.md"
authors = [
    { name = "hobs", email = "github@totalgood.com" }
]
requires-python = ">=3.11"
dependencies = [
    "ipython>=9.3.0",
    "jsonlines",
    "lxml>=5.4.0",
    "matplotlib>=3.10.3",
    "pandas>=2.3.0",
    "pyperclip>=1.9.0",
    "requests>=2.32.4",
    "scikit-learn>=1.7.0",
    "seaborn>=0.13.2",
]

[project.scripts]
pyquest = "pyquest:main"
pyquest = "pyquest:main"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/pyquest"]

