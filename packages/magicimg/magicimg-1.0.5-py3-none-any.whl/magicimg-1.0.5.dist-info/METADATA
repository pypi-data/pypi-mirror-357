    debug_dir="debug",      # ThÆ° má»¥c lÆ°u áº£nh debug
    config={               # Cáº¥u hÃ¬nh tÃ¹y chá»‰nh
        "min_blur_index": 60.0,
        "min_brightness": 150.0,
        "min_contrast": 30.0,
        "min_quality_score": 0.5,
        "skip_rotation": False,
        "use_gpu": True
    }
