    'width': int,           # Chiá»u rá»™ng (pixels)
    'height': int,          # Chiá»u cao (pixels) 
    'channels': int,        # Sá»‘ kÃªnh mÃ u
    'file_size_mb': float,  # Dung lÆ°á»£ng file (MB)
    'aspect_ratio': float   # Tá»· lá»‡ khung hÃ¬nh
