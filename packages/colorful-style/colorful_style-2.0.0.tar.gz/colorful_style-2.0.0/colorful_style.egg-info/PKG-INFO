Animate.fade_in("VÄƒn báº£n xuáº¥t hiá»‡n dáº§n dáº§n", Colors.blue, duration=2)
Animate.fade_out("VÄƒn báº£n biáº¿n máº¥t dáº§n dáº§n", Colors.red, duration=2)

# Blink effect
Animate.blink("VÄƒn báº£n nháº¥p nhÃ¡y", Colors.yellow, times=5)
Animate.blink("Nháº¥p nhÃ¡y vá»›i tá»‘c Ä‘á»™ nhanh", Colors.green, times=10, speed=0.1)

# Rainbow animation
Animate.rainbow("VÄƒn báº£n cáº§u vá»“ng chuyá»ƒn Ä‘á»™ng", duration=3)
Animate.rainbow("Cáº§u vá»“ng vá»›i tá»‘c Ä‘á»™ cháº­m", duration=5, speed=0.1)

# Matrix effect
Animate.matrix("MATRIX DIGITAL RAIN", duration=5)
