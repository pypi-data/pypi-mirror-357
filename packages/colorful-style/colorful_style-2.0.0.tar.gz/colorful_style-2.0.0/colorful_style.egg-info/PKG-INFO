    time.sleep(1)
    
    Effects.hologram("HOLOGRAM TEXT", Colors.rainbow, flicker=True)
    time.sleep(1)
    
    print()
    Interactive.input("Nháº¥n Enter Ä‘á»ƒ tiáº¿p tá»¥c...", Colors.cyan)

def demo_animations():
