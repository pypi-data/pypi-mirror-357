```python
from colorful_style import *
import time

def main():
    System.init()
    System.clear()
    System.title("Colorful Style Menu Demo")
    
    while True:
        System.clear()
        
        # Banner
        Banner.ascii_art("MENU DEMO", Colors.rainbow, font="big")
        print()
        
        # Menu chÃ­nh
        options = [
            "ğŸ¨ Demo MÃ u Sáº¯c",
            "âœ¨ Demo Hiá»‡u á»¨ng",
            "ğŸ­ Demo Animation",
            "ğŸ“¦ Demo Box Styles",
            "ğŸ® Demo Interactive",
            "ğŸª Demo Banner",
            "âš™ï¸ CÃ i Äáº·t",
            "âŒ ThoÃ¡t"
        ]
        
        choice = Interactive.menu("Chá»n má»™t tÃ¹y chá»n:", options, Colors.cyan)
        
        if choice == 0:
            demo_colors()
        elif choice == 1:
            demo_effects()
        elif choice == 2:
            demo_animations()
        elif choice == 3:
            demo_boxes()
        elif choice == 4:
            demo_interactive()
        elif choice == 5:
            demo_banners()
        elif choice == 6:
            demo_config()
        elif choice == 7:
            break
    
    System.clear()
    Animate.typing("Cáº£m Æ¡n báº¡n Ä‘Ã£ sá»­ dá»¥ng Colorful Style!", Colors.gold, speed=0.03)
    time.sleep(2)

def demo_colors():
    System.clear()
    print(Align.Center("=== DEMO MÃ€U Sáº®C ===", Colors.gold))
    print()
    
    # MÃ u cÆ¡ báº£n
    colors = [Colors.red, Colors.green, Colors.blue, Colors.yellow, Colors.magenta, Colors.cyan]
    color_names = ["Äá»", "Xanh lÃ¡", "Xanh dÆ°Æ¡ng", "VÃ ng", "TÃ­m", "Xanh lÆ¡"]
    
    for color, name in zip(colors, color_names):
        print(f"{color}{name:10} - MÃ u sáº¯c Ä‘áº¹p máº¯t!")
    
    print()
    
    # Gradient
    print(Colorate.Horizontal(Colors.rainbow, "Gradient cáº§u vá»“ng", 1))
    print(Colorate.Horizontal(Colors.sunset, "Gradient hoÃ ng hÃ´n", 1))
    print(Colorate.Horizontal(Colors.ocean, "Gradient Ä‘áº¡i dÆ°Æ¡ng", 1))
    
    print()
    Interactive.input("Nháº¥n Enter Ä‘á»ƒ tiáº¿p tá»¥c...", Colors.cyan)

def demo_effects():
    System.clear()
    print(Align.Center("=== DEMO HIá»†U á»¨NG ===", Colors.gold))
    print()
    
    Effects.glitch("GLITCH EFFECT", Colors.cyan, intensity=0.3)
