<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_request_line_tree" model="ir.ui.view">
        <field name="name">purchase.request.line.list</field>
        <field name="model">purchase.request.line</field>
        <field
            name="inherit_id"
            ref="purchase_request_analytic_tag.purchase_request_line_tree"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_tag_ids']" position="before">
                <field name="fund_id" optional="show" />
            </xpath>
            <xpath expr="//field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>
    <record id="purchase_request_line_form" model="ir.ui.view">
        <field name="name">purchase.request.line.form</field>
        <field name="model">purchase.request.line</field>
        <field
            name="inherit_id"
            ref="purchase_request_analytic_tag.purchase_request_line_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='settings']/field[@name='analytic_tag_ids']"
                position="before"
            >
                <field name="fund_id" />
            </xpath>
            <xpath
                expr="//group[@name='settings']/field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute
                    name="domain"
                >[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_purchase_request_line_details" model="ir.ui.view">
        <field name="name">purchase.request.line.details.form</field>
        <field name="model">purchase.request.line</field>
        <field
            name="inherit_id"
            ref="purchase_request_analytic_tag.view_purchase_request_line_details"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='main']//field[@name='analytic_tag_ids']"
                position="before"
            >
                <field name="fund_all" invisible="1" />
                <field name="fund_id" readonly="not is_editable" />
                <field name="domain_tag_ids" invisible="1" />
                <field name="analytic_tag_all" invisible="1" />
            </xpath>
            <xpath
                expr="//group[@name='main']//field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute
                    name="domain"
                >[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
