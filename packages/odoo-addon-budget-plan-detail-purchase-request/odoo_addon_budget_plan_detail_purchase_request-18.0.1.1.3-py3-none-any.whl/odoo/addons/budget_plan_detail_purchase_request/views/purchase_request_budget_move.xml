<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Purchase Request Move Line -->
    <record id="view_purchase_request_budget_move_form" model="ir.ui.view">
        <field name="name">view.purchase.request.budget.move.form</field>
        <field name="model">purchase.request.budget.move</field>
        <field
            name="inherit_id"
            ref="budget_control_purchase_request.view_purchase_request_budget_move_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_account_id']" position="after">
                <field name="fund_id" />
                <field name="fund_group_id" />
                <field name="analytic_tag_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
</odoo>
