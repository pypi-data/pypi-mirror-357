<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field
            name="inherit_id"
            ref="purchase_request_analytic_tag.view_purchase_request_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='line_ids']/list/field[@name='analytic_tag_ids']"
                position="before"
            >
                <field name="fund_all" column_invisible="1" />
                <field name="fund_id" optional="show" />
                <field name="domain_tag_ids" column_invisible="1" />
                <field name="analytic_tag_all" column_invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='line_ids']/list//field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute
                    name="domain"
                >[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]</attribute>
                <!-- Show Analytic tags is default -->
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>
</odoo>
