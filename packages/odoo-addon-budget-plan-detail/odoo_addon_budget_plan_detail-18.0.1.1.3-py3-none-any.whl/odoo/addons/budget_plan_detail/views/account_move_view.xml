<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Account Move Line -->
    <record id="view_move_line_form" model="ir.ui.view">
        <field name="name">account.move.line.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_distribution']" position="after">
                <field name="fund_all" widget="many2many_tags" invisible="1" />
                <field name="fund_id" options="{'no_create': True}" />
            </xpath>
        </field>
    </record>
    <record id="view_move_line_list" model="ir.ui.view">
        <field name="name">account.move.line.list</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_distribution']" position="after">
                <field name="fund_all" widget="many2many_tags" invisible="1" />
                <field name="fund_id" options="{'no_create': True}" optional="hide" />
            </xpath>
        </field>
    </record>

    <!-- Account Move -->
    <record id="account_move_analytic_tag_ids_form" model="ir.ui.view">
        <field name="name">account.move.tag_ids.form.inherit</field>
        <field name="model">account.move</field>
        <field
            name="inherit_id"
            ref="account_analytic_tag.account_move_analytic_tag_ids_form"
        />
        <field name="arch" type="xml">
            <!-- Add fund -->
            <xpath
                expr="//field[@name='invoice_line_ids']/list/field[@name='analytic_tag_ids']"
                position="before"
            >
                <field name="analytic_tag_all" column_invisible="1" />
                <field name="fund_all" widget="many2many_tags" column_invisible="1" />
                <field name="fund_id" />
            </xpath>
            <xpath
                expr="//field[@name='line_ids']/list/field[@name='analytic_tag_ids']"
                position="before"
            >
                <field name="analytic_tag_all" column_invisible="1" />
                <field name="fund_all" widget="many2many_tags" column_invisible="1" />
                <field name="fund_id" />
            </xpath>
            <!-- Add analytic tags -->
            <xpath
                expr="//field[@name='invoice_line_ids']//field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute
                    name="domain"
                >[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]</attribute>
            </xpath>
            <xpath
                expr="//field[@name='line_ids']/list/field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute
                    name="domain"
                >[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
