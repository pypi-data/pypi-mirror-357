<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Account Move Line -->
    <record id="view_account_budget_move_form" model="ir.ui.view">
        <field name="name">view.account.budget.move.form</field>
        <field name="model">account.budget.move</field>
        <field name="inherit_id" ref="budget_control.view_account_budget_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_account_id']" position="after">
                <field name="fund_id" />
                <field name="fund_group_id" />
                <field name="analytic_tag_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
</odoo>
