<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.ninjamar.compactdns_watcher</string>
    <key>ProgramArguments</key>
    <array>
        <string>{sleepwatcher_path}</string>
        <string>-V</string>
        <string>-w</string>
        <string>{wakeup_path}</string>
    </array>


    <key>RunAtLoad</key>
    <true/>


    <key>StandardOutPath</key>
    <string>/tmp/sleepwatcher-root.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/sleepwatcher-root-err.log</string>
</dict>
</plist>