        <field name="name">Budget Plan Line multi-company</field>
        <field name="model_id" ref="budget_control.model_budget_plan_line" />
        <field name="domain_force">
            [
                '|',
                ('company_ids', '=', False),
                ('company_ids', 'in', company_ids)
            ]
        </field>
    </record>
</odoo>
