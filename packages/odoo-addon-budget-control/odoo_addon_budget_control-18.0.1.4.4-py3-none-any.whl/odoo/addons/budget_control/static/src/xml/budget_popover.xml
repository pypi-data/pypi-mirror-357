<?xml version="1.0" encoding="utf-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="budget_control.budgetPopOver">
        <div class="p-2">
            <t t-foreach="props.analytic" t-as="item" t-key="item.id">
                <div class="mb-3 p-2 border rounded shadow-sm">
                    <div class="fw-bold mb-2 text-primary">
                        <t t-out="item.name" />
                    </div>
                    <table class="table table-sm mb-0">
                        <tbody>
                            <tr>
                                <td class="text-muted">Planned</td>
                                <td class="text-end text-nowrap">
                                    <t t-out="item.budget" />
                                </td>
                            </tr>
                            <tr>
                                <td class="text-muted">Used</td>
                                <td class="text-end text-nowrap text-danger">
                                    - <t t-out="item.consumed" />
                                </td>
                            </tr>
                            <tr class="bg-light">
                                <td class="fw-bold">Available</td>
                                <td class="text-end text-nowrap fw-bold text-success">
                                    = <t t-out="item.balance" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </div>
    </t>
</templates>
