<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_budget" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.budget</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app
                    data-string="Budgeting"
                    string="Budgeting"
                    name="budget_control"
                    groups="budget_control.group_budget_control_manager"
                >
                    <block
                        title="Budget Control Documents"
                        name="budget_control_documents_container"
                    >
                        <setting
                            id="budget_control_account"
                            help="Enable budget actuals on Bills / Journal Entries."
                        >
                            <field name="budget_control_account" />
                        </setting>
                        <setting
                            id="budget_control_purchase_request"
                            help="Enable budget commitment on purchase request."
                        >
                            <field name="module_budget_control_purchase_request" />
                        </setting>
                        <setting
                            id="budget_control_purchase"
                            help="Enable budget commitment on purchase order."
                        >
                            <field name="module_budget_control_purchase" />
                        </setting>
                        <setting
                            id="budget_control_advance_clearing"
                            help="Enable budget commitment on employee advance and also on clearing."
                        >
                            <field name="module_budget_control_advance_clearing" />
                        </setting>
                        <setting
                            id="budget_control_expense"
                            help="Enable budget commitment on expense sheet."
                        >
                            <field name="module_budget_control_expense" />
                        </setting>
                    </block>
                    <block
                        title="Budget Control Options"
                        name="budget_control_options_container"
                    >
                        <setting
                            id="budget_include_tax"
                            help="By default, budget commitment will be untaxed amount. If checked, budget commitment will include tax amount."
                        >
                            <field name="budget_include_tax" />
                            <div
                                class="content-group"
                                invisible="not budget_include_tax"
                            >
                                <div class="mt16">
                                    <field
                                        name="budget_include_tax_method"
                                        class="o_light_label"
                                        widget="radio"
                                    />
                                    <div
                                        name="account"
                                        invisible="budget_include_tax_method != 'specific'"
                                    >
                                        <label
                                            for="budget_include_tax_account"
                                            string="Bills / Journal Entries"
                                            class="o_light_label"
                                        />
                                        <field
                                            name="budget_include_tax_account"
                                            class="oe_inline"
                                            placeholder="taxes to include"
                                            widget="many2many_tags"
                                        />
                                    </div>
                                    <div
                                        name="purchase"
                                        invisible="budget_include_tax_method != 'specific' or not module_budget_control_purchase"
                                    >
                                        <label
                                            for="budget_include_tax_purchase"
                                            string="Purchase Order"
                                            class="o_light_label"
                                        />
                                        <field
                                            name="budget_include_tax_purchase"
                                            class="oe_inline"
                                            placeholder="taxes to include"
                                            widget="many2many_tags"
                                        />
                                    </div>
                                    <div
                                        name="expense"
                                        invisible="budget_include_tax_method != 'specific' or not module_budget_control_expense"
                                    >
                                        <label
                                            for="budget_include_tax_expense"
                                            string="Expense"
                                            class="o_light_label"
                                        />
                                        <field
                                            name="budget_include_tax_expense"
                                            class="oe_inline"
                                            placeholder="taxes to include"
                                            widget="many2many_tags"
                                        />
                                    </div>
                                </div>
                            </div>
                        </setting>
                        <setting
                            id="budget_required_analytic"
                            help="Required analytic account for documents that have a committed budget, such as PR, PO, AV, EX, and Actual."
                        >
                            <field name="group_required_analytic" />
                        </setting>
                        <setting
                            id="budget_date_commit"
                            help="Allow users to commit a budget using the 'date commit' field."
                        >
                            <field name="group_budget_date_commit" />
                        </setting>
                        <setting
                            id="budget_control_key"
                            help="Default Key to used get KPI."
                        >
                            <field name="budget_control_key" widget="selection" />
                        </setting>
                    </block>
                    <block
                        title="Budget Plan Options"
                        name="budget_plan_options_container"
                    />
                    <block title="Budget Period" name="budget_period_container">
                        <setting
                            id="budget_template_id"
                            help="Default Budget Template used when create new budget period."
                        >
                            <field name="budget_template_id" widget="selection" />
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
    <record id="action_budget_configuration" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'budget_control', 'bin_size': False}</field>
    </record>
    <menuitem
        id="budget_settings_menu"
        name="Settings"
        parent="budget_control.budget_config_menu"
        sequence="0"
        action="action_budget_configuration"
        groups="base.group_system"
    />
</odoo>
