# Matplotlib style: clean white on black.
# In general, they advocate for all fonts to be sans serif
# and all font sizes in a figure to be 7 pt and panel labels to be 8 pt bold.

# Figure size
figure.figsize : 3.3, 2.5  # max width is 3.5 for single column

# Set x axis
xtick.direction : in
#xtick.major.size : 3
xtick.major.width : 0.65
#xtick.minor.size : 1.5
xtick.minor.width : 0.5
xtick.minor.visible : False
xtick.bottom : True
xtick.color : White

# Set y axis
ytick.direction : in
#ytick.major.size : 3
ytick.major.width : 0.65
#ytick.minor.size : 1.5
ytick.minor.width : 0.5
ytick.minor.visible : False
ytick.left : True
ytick.color : White

# Font sizes
axes.labelsize: 8
xtick.labelsize: 7
ytick.labelsize: 7
legend.fontsize: 7
font.size: 7

# Font Family
font.family: sans-serif
font.sans-serif: DejaVu Sans, Helvetica, Lucida Grande, Verdana, Geneva, Lucid, Avant Garde, sans-serif
mathtext.fontset : dejavusans

# Font color
text.color: white
axes.labelcolor: white

# Background color
figure.facecolor: black
axes.facecolor: black

## Always save as 'tight'
#savefig.bbox : tight
#savefig.pad_inches : 0.01  # Use virtually all space when we specify figure dimensions

# LaTeX packages
text.latex.preamble : \usepackage{amsmath} \usepackage{amssymb} \usepackage{sfmath}

# Axis spines
axes.spines.top:    False
axes.spines.right:  False
axes.spines.left:   True  # display axis spines
axes.spines.bottom: True
axes.edgecolor : white

# Some might like to set:
#axes.labelweight: bold

# Set line widths
axes.linewidth : 0.65
grid.linewidth : 0.5
lines.linewidth : 1.