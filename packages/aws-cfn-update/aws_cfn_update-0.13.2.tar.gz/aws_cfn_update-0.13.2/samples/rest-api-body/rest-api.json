{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Rest API gateway configuration",
  "Resources": {
    "Deployment": {
      "Type": "AWS::ApiGateway::Deployment",
      "Properties": {
        "RestApiId": {
          "Ref": "RestAPI"
        }
      }
    },
    "RestAPI": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "EndpointConfiguration": {
          "Types": [
            "REGIONAL"
          ]
        },
        "Body": {
          "swagger": "2.0"
        }
      }
    }
  }
}